# ========== AI PROVIDER ==========
# Options: 'gemini' or 'openai'
AI_PROVIDER=gemini

# ========== GEMINI API ==========
GEMINI_API_KEY=your-gemini-api-key

# ========== OPENAI API ==========
OPENAI_HOST=https://api.openai.com
OPENAI_MODEL_NAME=gpt-4o
OPENAI_KEY=your-openai-api-key

# ========== VEO VIDEO GENERATION ==========
# Authentication method: 'false' for AI Studio (API key), 'true' for Vertex AI (GCP project)
# NOTE: Video extensions (longer videos) only work with AI Studio, not Vertex AI
VEO_USE_VERTEX_AI=false

# AI Studio authentication (when VEO_USE_VERTEX_AI=false)
VEO_API_KEY=your-veo-api-key

# Vertex AI authentication (when VEO_USE_VERTEX_AI=true)
# Requires: gcloud auth application-default login (or service account JSON)
# IAM roles: Vertex AI User, Storage Object Admin (for GCS bucket)
VERTEX_PROJECT=your-gcp-project-id
VERTEX_LOCATION=us-central1
# GCS bucket for video output (required for Vertex AI mode)
# Videos are written to GCS then downloaded (Vertex AI doesn't support direct download)
VERTEX_GCS_BUCKET=gs://your-bucket-name/veo-videos
# Path to service account JSON file (optional if using gcloud ADC)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# VEO model configuration
VEO_MODEL_NAME=veo-3.1-generate-preview

# Set to true to skip roteiro generation and only generate videos from existing roteiros
SKIP_ROTEIRO_GENERATION=false
# Limit videos per run (0 = unlimited). Skips roteiros that already have videos.
MAX_VIDEOS_PER_RUN=0
# Number of extensions (~8s each). 5 extensions = ~48s total video
VEO_EXTENSIONS=5
# Number of scenes per roteiro (each scene ~8s)
ROTEIRO_NUM_SCENES=6

# ========== MINIO CONFIGURATION ==========
MINIO_ENDPOINT=https://your-minio-endpoint.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME_ROTEIROS=roteiros
MINIO_BUCKET_NAME_INSIGHTS=insights
SAVE_ON_MINIO=true
WIPE_BUCKET_BEFORE_START=false

# ========== APPLICATION ==========
APP_NAME=scraper-idosos
APP_ENV=development
LOG_LEVEL=INFO

MAX_WORKERS=10
